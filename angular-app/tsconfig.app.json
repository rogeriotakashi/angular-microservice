{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths":{ 
      "@core/*": ["app/core/*"],
      "@component/*": ["app/modules/*"],
    }
      },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [  
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
